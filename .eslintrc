{
  "env": {
    "es6": true,
 	  "node": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "eqeqeq": [2, "smart"],
    "curly": [2, "all"],
    "no-spaced-func": 2,
    "no-unused-vars": 2,
    "no-underscore-dangle": false,
    "no-unused-expressions": false
  }
}
